{
  "name": "github-stats",
  "version": "1.0.0",
  "private": true,
  "description": "Animated GitHub stats cards - Remotion generator and API server",
  "author": "Luke Hagar",
  "license": "UNLICENSED",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "scripts": {
    "dev": "pnpm --filter @github-stats/remotion dev",
    "dev:server": "pnpm --filter @github-stats/server dev",
    "dev:worker": "pnpm --filter @github-stats/server worker",
    "dev:all": "concurrently -n remotion,server,worker -c blue,green,yellow \"pnpm dev\" \"pnpm dev:server\" \"pnpm dev:worker\"",
    "build": "pnpm -r build",
    "render": "pnpm --filter @github-stats/remotion render",
    "render:all": "pnpm --filter @github-stats/remotion render:all",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "docker:up": "docker compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f docker-compose.dev.yml down",
    "docker:logs": "docker compose -f docker-compose.dev.yml logs -f"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "5.8.2"
  }
}
