{
  "name": "@github-stats/server",
  "version": "1.0.0",
  "description": "API server for GitHub Stats GIF generation",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "worker": "bun run src/workers/render-worker.ts",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf node_modules temp"
  },
  "dependencies": {
    "@github-stats/remotion": "workspace:*",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.4",
    "@hono/zod-validator": "^0.4.2",
    "@octokit/app": "^15.1.1",
    "@octokit/core": "^6.1.3",
    "@octokit/webhooks": "^13.4.2",
    "@remotion/bundler": "4.0.382",
    "@remotion/renderer": "4.0.382",
    "@scalar/hono-api-reference": "^0.5.170",
    "@t3-oss/env-core": "^0.11.1",
    "bullmq": "^5.34.8",
    "hono": "^4.6.14",
    "ioredis": "^5.4.2",
    "minio": "^8.0.2",
    "zod": "3.22.3"
  },
  "devDependencies": {
    "@types/bun": "^1.1.14",
    "typescript": "5.8.2"
  }
}

