# Server Configuration
PORT=3000
NODE_ENV=development

# GitHub App (required)
GITHUB_APP_ID=your-app-id
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"
GITHUB_WEBHOOK_SECRET=your-webhook-secret
GITHUB_APP_INSTALL_URL=https://github.com/apps/your-app-slug/installations/new

# Redis
REDIS_URL=redis://localhost:6379

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=github-stats
MINIO_USE_SSL=false

# Rendering
RENDER_CONCURRENCY=2
RENDER_TIMEOUT_MS=60000

# Optional: base URL for generating absolute image URLs from the API
# If unset, the API will return relative URLs.
PUBLIC_URL=http://localhost:3000

